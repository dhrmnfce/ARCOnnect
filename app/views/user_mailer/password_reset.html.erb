<head>
  <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">
  <meta charset="UTF-8">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <style>
  
    .greetingBlock {
      background: #14ad54;
      padding: 5px 30px;
    }
    
    h1.greeting {
        color: white;
        font-size: 3.5em;
    }
    
    p {
      font-size: 1.25em;
    }
    
    .resetLink {
      text-decoration: none;
      color: #14ad54;
    }
    
    .resetLink:link {
      text-decoration: none;
      color: #14ad54;
    }
    
    .resetLink:hover {
      text-decoration: none;
      color: #2bd170;
    }
    
    .resetLink:active {
      text-decoration: none;
      color: #437f5c;
    }
    
    .resetLink:visited {
      text-decoration: none;
      color: #14ad54;
    }
    
    .resetString {
      font-size: .5em;
    }
    
  </style>
</head>

<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="greetingBlock">
        <h1 class="greeting"><%= @greeting %></h1>
      </div>
      </br>
      <p>
       Click <%= link_to "here", edit_password_reset_url(@user.reset_token, email: @user.email), class: 'resetLink' %> to reset your password, or copy this url and paste it in your browser:
       </br>
       <span class="resetString"><%= edit_password_reset_url(@user.reset_token, email: @user.email) %></span>
      </p>
      <p>This link will expire in two hours.</p>
      <p>
        If you did not request your password to be reset, please ignore this email and your password will stay as it is.
      </p>
    </div>
  </div>
</div>